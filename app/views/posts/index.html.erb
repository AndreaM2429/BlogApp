<section class="user-container d-flex-col">
  <%= render partial: 'users/user_card', object: @user, as: :user %>

  <%= render partial: 'posts_comments', collection: @posts, as: :post %>
  
  <div class="d-flex btn-nav">
    <span class="pagination">
      <%= paginate @posts, window: 2 %>
    </span>
    <%= navigation_buttons %>
  </div>
</section>

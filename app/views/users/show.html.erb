<section class="user-container d-flex-col">
  <%= render partial: 'user_card', object: @user, as: :user %>

  <div class="border bio">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>
  
  <div class="btn-cont d-flex">
    <button><%= link_to 'Create post', new_user_post_path(@user) %></button>
  </div>

  <div class="d-flex-col post-container">
    <%= render partial: 'posts/posts_card', collection: @user.three_recent_posts, as: :post %>
  </div>
  <div class="d-flex btn-nav">
    <%= show_all_post(@user) %>
    <%= navigation_buttons %>
  </div>
</section>
<span class="tests">Info from specific user</span>